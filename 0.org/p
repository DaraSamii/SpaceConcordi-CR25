FoamFile
{
    format      ascii;
    class       volScalarField;
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


#include "../system/parameters.cs"

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform $P;

boundaryField
{
    inlet
    {
        type            zeroGradient;
	value           uniform $P;
    }

    outlet
    {
        type            waveTransmissive;
        field           p;
        gamma           1.3;
        fieldInf        $P;
        lInf            1;
        value           uniform $P;
    }

    sides
    {
    type            freestreamPressure;
    freestreamValue uniform $P;
    }

    rocket
    {
        type            zeroGradient;
	value           uniform $$P;
    }
}

