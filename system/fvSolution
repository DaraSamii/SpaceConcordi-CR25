FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "rho.*"
    {
        solver          diagonal;
    }

    "p.*"
    {
        solver          PBiCGStab;
        preconditioner  diagonal;
        tolerance       1e-12;
        relTol          0;
    }

    "(U|e).*"
    {
        $p;
        tolerance       1e-9;
    }

    "(k|epsilon||nuTilda|omega|h).*"
    {
        $p;
        tolerance       1e-10;
    }
}


SIMPLE
{
    residualControl
    {
        p               1e-4;
        U               1e-4;
        "(k|omega|e)"   1e-4;
    }

    nNonOrthogonalCorrectors 0;
}


PIMPLE
{
    nOuterCorrectors 2;
    nCorrectors      3;
    nNonOrthogonalCorrectors 1;

    transonic            yes;
}

potentialFlow
{
    nNonOrthogonalCorrectors 2;
}

relaxationFactors
{
    fields
    {
        p 0.6;
        T 0.7;
    }
    equations
    {
        ".*"  0.5;
    }

