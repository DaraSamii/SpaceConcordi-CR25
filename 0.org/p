FoamFile
{
    format      ascii;
    class       volScalarField;
    object      p;
    location    "0";
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


#include "../system/parameters.cs"

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform $P;

boundaryField
{
    inlet
    {
        type            zeroGradient;
	    value           uniform $P;
    }

    outlet
    {
        type            waveTransmissive; 
        psi             thermo:psi;
        lInf            0.1;
        gamma           1.4;
        field           p;
        phi             phi;
        rho             rho;
        fieldInf        $P;  // Far-field atmospheric pressure
        value           uniform $P; 
    }

    sides
    {
    type            freestreamPressure;
    freestreamValue uniform $P;
    }

    rocket
    {
        type            zeroGradient;
	value           uniform $P;
    }
}

// ************************************************************************* //
