FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "rho.*"
    {
        solver          diagonal;
    }

    "p.*"
    {
        solver          GAMG;
        smoother        GaussSeidel;
        tolerance       1e-6;
        relTol          0.001;
        /*
        solver          PBiCGStab;
        preconditioner  diagonal;
        tolerance       1e-12;
        relTol          0;*/
    }

    "(U|e).*"
    {
        solver          PBiCGStab;
        preconditioner  diagonal;
        tolerance       1e-9;
        relTol          0;
    }

    "(k|epsilon||nuTilda|omega|h).*"
    {
        solver          GAMG;
        smoother        GaussSeidel;
        tolerance       1e-8;
        relTol          0;
    }
}


SIMPLE
{
    residualControl
    {
        p               1e-7;
        U               1e-7;
        "(k|omega|e)"   1e-6;
    }

    nNonOrthogonalCorrectors 2;
    transonic       no;
}


PIMPLE
{
    nOuterCorrectors 1;
    nCorrectors      1;
    nNonOrthogonalCorrectors 1;

    transonic            yes;
}

potentialFlow
{
    nNonOrthogonalCorrectors 2;
}

relaxationFactors
{
    fields
    {
        p               0.4;
        U               0.3;
        rho             0.01;
    }
    equations
    {
        U               0.1;
        e               0.5;
        "(k|omega|nut)"     0.1;
    }
}

