FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "rho.*"
    {
        solver          diagonal;
    }

    p
    {
        solver          PBiCGStab;         // Bi-Conjugate Gradient Stabilized
        preconditioner  DIC;             // Diagonal Incomplete LU (DILU)
        tolerance       1e-06;
        relTol          0.01;
    }
    

    e
    {
        solver          PBiCG;
        preconditioner  DILU;
        tolerance       1e-06;
        relTol          0.01;
    }

    "U.*"
    {
        solver          PBiCGStab;
        preconditioner  diagonal;
        tolerance       1e-10;
        relTol          0;
    }

    "(k|epsilon||nuTilda|omega|h).*"
    {
        solver          GAMG;
        smoother        GaussSeidel;
        tolerance       1e-10;
        relTol          0;
    }
}


SIMPLE
{
    residualControl
    {
        p               1e-6;
        U               1e-6;
        "(k|omega|e)"   1e-5;
    }

    nNonOrthogonalCorrectors 2;
    transonic       no;
}


PIMPLE
{
    nOuterCorrectors 1;
    nCorrectors      1;
    nNonOrthogonalCorrectors 1;

    transonic            yes;
}

potentialFlow
{
    nNonOrthogonalCorrectors 2;
}

relaxationFactors
{
    fields
    {
        p               0.5;
        U               0.6;
        rho             0.2;
    }
    equations
    {
        U               0.6;
        e               0.5;
        "(k|omega|nut)"     0.4;
    }
}

