FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvOptions;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


limitTemperature
{
    type        limitTemperature;
    active      true;
    limitTemperatureCoeffs
    {
        selectionMode   all;          // Applies to all cells
        min            20;          // Minimum temperature in Kelvin
        max            20000;          // Maximum temperature in Kelvin
    }
}
