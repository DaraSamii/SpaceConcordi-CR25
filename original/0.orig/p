FoamFile
{
    format      ascii;
    class       volScalarField;
    object      p;
    location    "0";
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


#include "../parameters.cs"

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform $P;

boundaryField
{
    "(sides|outlet|inlet)"
    {
    type            freestreamPressure;
    freestreamValue uniform $P;
    }

    rocket
    {
        type            zeroGradient;
	value           uniform $P;
    }
}

