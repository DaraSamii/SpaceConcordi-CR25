FoamFile
{
    version   2.0;
    format    ascii;
    class     dictionary;
    location  "system";
    object    meshDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "../parameters.cs"

surfaceFile "geometry/combined.fms";



maxCellSize $maxCellSize;



localRefinement
{
    rocket
    {
        cellSize #calc "$firstLayerThickness * 10.0";
        refinementThickness 0.1;
    }

}

objectRefinements
{
    box1
    {
        type box;
        cellSize #calc "$maxCellSize / 2.0";
        centre (3.5 0 0);
        lengthX 12;
        lengthY 4;
        lengthZ 4;
    }
    box2
    {
        type box;
        cellSize #calc "$maxCellSize / 4.0";
        centre (2.5 0 0);
        lengthX 8;
        lengthY 2;
        lengthZ 2;
    }
    box3
    {
        type box;
        cellSize #calc "$maxCellSize / 8.0";
        centre (1.5 0 0);
        lengthX 4;
        lengthY 1;
        lengthZ 1;
    }
}

boundaryLayers
{
    patchBoundaryLayers
    {
        rocket
        {
            nLayers 7;
            thicknessRatio 1.2;
            maxFirstLayerThickness $firstLayerThickness;

            allowDiscontinuity 0;
        }
    }

    optimiseLayer true;

    optimisationParameters
    {
        nSmoothNormals 5;
        maxNumIterations 10;
        featureSizeFactor 0.4;
        reCalculateNormals true;
        relThicknessTol 0.1;
        
    }
}

renameBoundary
{
    patchBoundaryLayers
    {
        inlet
        {
             type            patch;
        }
        outlet
        {
            type            patch;    
        }
        sides
        {
            type            patch;    
        }
        rocket
        {
            type            wall;
        }
    }
}



