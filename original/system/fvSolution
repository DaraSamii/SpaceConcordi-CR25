FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

MinIter  4;

solvers
{
    p
    {
        solver          GAMG;
        smoother        GaussSeidel;
        tolerance       1e-6;
        relTol          0.0;
        minIter         $MinIter;

    }

    "(U|k|omega|e)"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-8;
        relTol          0.0;
        minIter         $MinIter;


    }
}

SIMPLE
{
    residualControl
    {
        p               1e-4;
        U               1e-4;
        "(k|omega|e)"   1e-4;
    }

    nNonOrthogonalCorrectors 2;
    pMinFactor      0.1;
    pMaxFactor      10;
}

relaxationFactors
{
    fields
    {
        p               0.4;
        rho             0.01;
    }
    equations
    {
        U               0.3;
        e               0.4;
        "(k|omega)"     0.4;
    }
}


