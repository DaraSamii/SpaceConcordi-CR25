FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSchemes;
}
// ************************************************************************* //

limit           0.3;

Main         Gauss limitedLinear $limit;
MainV        Gauss limitedLinearV $limit;
Turbulence   Gauss upwind;
Grad         Gauss linear limited 0.5;
Laplacian    Gauss linear limited corrected 0.5;
Interp       linear;
ReconS       vanAlbada;
ReconV       vanAlbadaV;


ddtSchemes
{
    default         backward;
}


gradSchemes
{
    default         Gauss linear;
    grad(U)         $Grad;
}


divSchemes
{
    default         none;

    // Main field transport
    div(phi,U)          $MainV;
    div(phi,e)          $Main;
    div(phi,h)          $Main;
    div(phi,K)          $Main;

    // Pressure transport
    div(phiv,p)         $Main;
    div(phid,p)         $Main;

    // Turbulence
    div(phi,k)          $Turbulence;
    div(phi,omega)      $Turbulence;
    div(phi,epsilon)    $Turbulence;
    div(phi,nuTilda)    $Main;
    div(phi,B)          $Main;

    // Miscellaneous
    div(B)              Gauss linear;
    div(tauMC)          Gauss linear;
    div(phi,Ekp)        $Turbulence;
    div(((rho*nuEff)*dev2(T(grad(U))))) Gauss linear;
}

laplacianSchemes
{
    default         $Laplacian;
}

interpolationSchemes
{
    default             $Interp;
    reconstruct(U)      $ReconV;
    reconstruct(rho)    $ReconS;
    reconstruct(T)      $ReconS;
}


snGradSchemes
{
    default         corrected;
}



wallDist
{
    method          meshWave;
}

// ************************************************************************* //
